<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>웹툰 페이지를 만들어보자</title>

    <!-- Font Awesome CSS -->
    <!-- 검색 버튼에 돋보기 추가하려고 설정 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

</head>
<body>
<!-- navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <!-- 홈 버튼 링크 -->
        <a href="/webtoons" class="btn btn-primary" style="background-color: #04B45F; border-color: #04B45F; font-weight: bold;font-family: "나눔고딕", sans-serif;">홈</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <!-- 드롭다운 메뉴 -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        장르별 TOP 10
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="/webtoons/PURE/rank" style="font-family: '나눔고딕', sans-serif;">로맨스</a></li>
                        <li><a class="dropdown-item" href="/webtoons/FANTASY/rank" style="font-family: '나눔고딕', sans-serif;">판타지</a></li>
                        <li><a class="dropdown-item" href="/webtoons/ACTION/rank" style="font-family: '나눔고딕', sans-serif;">액션</a></li>
                        <li><a class="dropdown-item" href="/webtoons/DAILY/rank" style="font-family: '나눔고딕', sans-serif;">일상</a></li>
                        <li><a class="dropdown-item" href="/webtoons/THRILL/rank" style="font-family: '나눔고딕', sans-serif;">스릴러</a></li>
                        <li><a class="dropdown-item" href="/webtoons/COMIC/rank" style="font-family: '나눔고딕', sans-serif;">개그</a></li>
                        <li><a class="dropdown-item" href="/webtoons/HISTORICAL/rank" style="font-family: '나눔고딕', sans-serif;">무협/사극</a></li>
                        <li><a class="dropdown-item" href="/webtoons/DRAMA/rank" style="font-family: '나눔고딕', sans-serif;">드라마</a></li>
                        <li><a class="dropdown-item" href="/webtoons/SENSIBILITY/rank" style="font-family: '나눔고딕', sans-serif;">감성</a></li>
                        <li><a class="dropdown-item" href="/webtoons/SPORTS/rank" style="font-family: '나눔고딕', sans-serif;">스포츠</a></li>
                    </ul>
                </li>
                
            </ul>

            <!-- 검색 폼 -->
            <form class="d-flex">
                <!-- 검색 입력 필드 -->
                <input id="searchInput" class="form-control me-2" type="search" placeholder="검색어를 입력하세요" aria-label="Search">
                <!-- 검색 버튼 -->
                <button class="btn btn-outline-success" type="submit" onclick="performSearch()">
                    <i class="fas fa-search"></i><!-- 돋보기 아이콘 -->
                </button>
            </form>
            <!-- 검색 스크립트 -->
            <script>
                // 클릭한 버튼의 스타일 상태를 저장하기 위한 객체
                var buttonStyles = {};

                function performSearch() {
                    const searchTerm = document.getElementById('searchInput').value;
                    let newURL = '/webtoons';

                    if (searchTerm) {
                        newURL = newURL + "/search/" + searchTerm;
                        history.pushState({ path: newURL }, '', newURL);
                        updateSearchResults(searchTerm);
                    } else {
                        alert("검색어를 입력하세요!!");
                    }
                }

               // 클릭한 버튼의 스타일 상태를 저장하기 위한 객체
                var buttonStyles = {};

                function changeColor(button) {
                    // 클릭한 버튼의 ID를 가져옴
                    var buttonId = button.getAttribute('id');

                    // 버튼의 배경색을 'white'로 변경
                    button.style.backgroundColor = 'white';

                    // 클릭한 버튼의 형제 요소들을 모두 가져와서 배경색과 텍스트 색상을 초기값으로 설정
                    var siblings = button.parentElement.children;
                    for (var i = 0; i < siblings.length; i++) {
                        if (siblings[i] !== button) { // 클릭한 버튼 자체는 변경하지 않도록 조건 추가
                            siblings[i].style.backgroundColor = ''; // 배경색 초기화
                            siblings[i].style.color = '#04B45F'; // 텍스트 색상 초기화
                        }
                    }

                    // 클릭한 버튼의 스타일 상태를 저장
                    buttonStyles[buttonId] = 'white';
                }

                // 페이지 로드 시 버튼 스타일을 복원
                document.addEventListener("DOMContentLoaded", function () {
                    var buttons = document.querySelectorAll(".btn-link");
                    buttons.forEach(function (button) {
                        var buttonId = button.getAttribute('id');

                        // 저장된 스타일이 있다면 복원
                        if (buttonStyles[buttonId]) {
                            button.style.backgroundColor = buttonStyles[buttonId];
                            if (buttonStyles[buttonId] === 'white') {
                                button.style.color = '#04B45F';
                            } else {
                                button.style.color = '#007bff';
                            }
                        }

                        // 각 버튼에 클릭 이벤트 리스너 추가
                        button.addEventListener("click", function () {
                            changeColor(this); // 버튼 클릭 시 스타일 변경 함수 호출
                        });
                    });
                });

                
            </script>
        </div>
    </div>
</nav>

{{#msg}}
